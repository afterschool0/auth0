extends  ../../layout

block content

    .container.main-pane(style={display: "flex", "flex-direction": "column", "margin-top": "2rem"})
        .row(style={width: "auto", padding: "0"})
            .col-12.text-center
                .card
                    .card-header.with-border
                        .h3.box-title Users
                    .card-body(style={color: "#333", "font-size": "1rem"})
                        div(ng-controller="AccountController", style={padding: "1rem"})
                            div(style="padding:1rem 0")
                                input.form-control(type="text", placeholder="Search...", ng-model="search", ng-change="Draw()")
                            .table(style={margin: 0})
                                .row(style={margin: 0})
                                    .title-cell.col-4 nickname
                                    .title-cell.col-4 mail
                                    .title-cell.col-4 group
                                .row(style={margin: 0}, ng-repeat="account in accounts")
                                    .row-cell.col-4 {{account.nickname}}
                                    .cell.col-4 {{account.mails[0]}}
                                    .cell.col-4 {{account.group}}
                            div(style={padding: "2rem"})
                                .btn.btn-info(style={"margin-right": "0.6rem", padding: "0.8rem", "line-height": "0.8rem", "font-size": "0.8rem"}, ng-click="Prev()")
                                    i.fas.fa-backward
                                .btn.btn-primary(style={"margin-right": "0.6rem", padding: "0.8rem", "line-height": "0.8rem", "font-size": "0.8rem"}, ng-click="Next()")
                                    i.fas.fa-forward
